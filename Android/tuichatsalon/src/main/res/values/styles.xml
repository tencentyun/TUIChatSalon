<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TRTChatSalonChatTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/trtcchatsalon_color_white</item>
    </style>

    <style name="TRTCChatSalonDialogTheme" parent="@android:style/Theme.Holo.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowBackground">@color/trtcchatsalon_color_bg_dialog</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="TRTCChatSalonButtonStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>